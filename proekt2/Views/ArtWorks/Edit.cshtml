@model proekt.Models.ArtWorks

@{
    ViewBag.Title = "Edit";
}

<style>
    .myLabel {
        background-color: rgb(245, 245, 245);
        padding: 15px
    }
</style>


<div class="myLabel">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="myLabel">
                <h4 style="color: dimgrey">
                    Here you can edit data about artworks available in our online store
                </h4>
                <label>
                    We've worked hard to bring the best collection of prints from the world's most respected artists and institutions. Browse some of our favourite categories or jump straight into the full collection to find the perfect piece.
                    <br />
                    <i>
                        <small>
                            Instructions: In the first field change the name of the artwork.
                            In the second field change URL with the picture of the artwork.
                            Then from the dropdown list, choose the artist who made the artwork. If it is not in the
                            list go to section @Html.ActionLink("Add Artist", "Create", "Artists").
                            At the end, if needed, change the price and the year artwork was made.
                        </small>
                    </i>
                </label>
            </div>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.Label("Name:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Image:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.img, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Price:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Year:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.year, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.year, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Artworks available in store", "Index")
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
